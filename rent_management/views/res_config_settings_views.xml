<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_res_config_settings_form_rent_management" model="ir.ui.view">
      <field name="name">res.config.settings.rent.management</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <!-- Ganti ini agar aman di Odoo 18 -->
        <xpath expr="//form" position="inside">
          <group string="WhatsApp Configuration" name="group_twilio">
            <field name="twilio_account_sid"/>
            <field name="twilio_auth_token"/>
            <field name="twilio_whatsapp_number"/>
            <field name="whatsapp_invoice_template_name"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
